{ 
  "name": "Mantra",
  "description": "Self-management tool to remind yourself the lesson you already learned.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mantra",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "declarativeNetRequest", "declarativeNetRequestFeedback"],
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
